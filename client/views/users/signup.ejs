<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../components/head %>
</head>

<body>
  <div id="login-page">
    <div class="container">
      <form class="form-login" method="POST" action="/user/signup">
        <h2 class="form-login-heading">sign up now</h2>
        <div class="login-wrap">
          <div class="form-group <% if (validationErrors.name) { %> has-error <% } %>">
            <input type="text" placeholder="User Name" id="name" name="name" class="form-control" value="<%= formData.name %>">
            <% if (validationErrors.name) { %>
            <p class="help-block"><%= validationErrors.name %></p>
            <% } %>
          </div>
          <div class="form-group <% if (validationErrors.email) { %> has-error <% } %>">
            <input type="text" placeholder="Email" id="email" name="email" class="form-control" value="<%= formData.email %>">
            <% if (validationErrors.email) { %>
            <p class="help-block"><%= validationErrors.email %></p>
            <% } %>
          </div>
          <div class="form-group <% if (validationErrors.password) { %> has-error <% } %>">
            <input type="password" placeholder="Password" id="password" name="password" class="form-control" value="<%= formData.password %>">
            <% if (validationErrors.password) { %>
            <p class="help-block"><%= validationErrors.password %></p>
            <% } %>
          </div>
          <div class="form-group <% if (validationErrors.repassword) { %> has-error <% } %>">
            <input type="password" placeholder="Repeat Password" id="repassword" name="repassword" class="form-control" value="<%= formData.repassword %>">
            <% if (validationErrors.repassword) { %>
            <p class="help-block"><%= validationErrors.repassword %></p>
            <% } %>
          </div>
          <div class="form-group">
            <label class="checkbox">
              <input type="checkbox" name="isAdmin" value="1"> Sign up as admin
            </label>
          </div>

          <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> SIGN UP</button>
          <hr>
          <div class="registration">
            Do you have an account?<br />
            <a class="" href="/user/signin">
              Signin
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!--BACKSTRETCH-->
  <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
  <script type="text/javascript" src="/lib/jquery.backstretch.min.js"></script>
  <script>
    $.backstretch("/img/login-bg.jpg", {
      speed: 500
    });
  </script>
</body>

</html>