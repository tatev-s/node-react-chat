<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../components/head %>
</head>

<body>
  <section id="container">

    <!--header start-->
    <% include ../components/header %>
    <!--header end-->
    <!--sidebar start-->
    <% include ../components/sidebar %>
    <!--sidebar end-->
    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <!-- row -->
        <div class="row mt">
          <div class="col-md-12">
            <div class="content-panel">
              <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> <%= title %> </h4>
                <hr>
                <thead>
                  <tr>
                    <th><i class="fa fa-bullhorn"></i> User Name</th>
                    <th class="hidden-phone"><i class="fa fa-bookmark"></i> email</th>
                    <% if(!user.isAdmin){ %>
                    <th class="hidden-phone"><i class="fa fa-bookmark"></i> Open chat</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% for (var user of users) { %>
                  <tr>
                    <td>
                      <%= user.get('name') %>
                    </td>
                    <td class="hidden-phone"><%= user.get('email') %> </td>
                    <% if(user.isAdmin){ %>
                    <td>
                      <button class="btn btn-success btn-xs"><a href="/chats/create/<%= user.get('id') %>"><i class="fa fa-envelope"></i></a></button>
                    </td>
                    <% } %>
                  </tr>

                  <%
                     } %>

                </tbody>
              </table>
            </div>
            <!-- /content-panel -->
          </div>
          <!-- /col-md-12 -->
        </div>
        <!-- /row -->
      </section>
    </section>
    <!--main content end-->

  </section>

</body>

</html>